&lt;/span>&lt;/span>&lt;span style="display:flex;">&lt;span>&lt;span style="color:#66d9ef">public&lt;/span> &lt;span style="color:#66d9ef">class&lt;/span> &lt;span style="color:#a6e22e">GlobalAppController&lt;/span> &lt;span style="color:#66d9ef">implements&lt;/span> HttpFunction {
